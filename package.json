{
    "name": "chord",
    "version": "0.0.1",
    "description": "Chord - A Modern Music Player",
    "homepage": "https://github.com/PeterDing/chord",
    "main": "./out/main.js",
    "author": "Peter Ding <dfhayst@gmail.com>",
    "license": "MIT",
    "scripts": {
        "compile": "gulp compile",
        "test": "gulp compile && ./node_modules/mocha/bin/mocha --delay",
        "start": "electron ./out/main.js",
        "dist": "electron-builder --win --mac --linux deb",
        "dist:mac": "electron-builder --mac",
        "dist:win": "electron-builder --win",
        "dist:linux": "electron-builder --linux deb",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "@types/react": "^16.4.11",
        "@types/react-dom": "^16.0.7",
        "@types/react-redux": "^6.0.6",
        "@types/request": "^2.47.1",
        "@types/request-promise": "^4.1.42",
        "@types/tough-cookie": "^2.3.3",
        "howler": "^2.0.14",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "react-redux": "^5.0.7",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.2"
    },
    "devDependencies": {
        "@types/howler": "^2.0.5",
        "@types/mocha": "^5.2.5",
        "electron": "^2.0.7",
        "electron-builder": "^20.28.4",
        "gulp": "^3.9.1",
        "gulp-clean": "^0.4.0",
        "gulp-filter": "^5.1.0",
        "gulp-tsb": "^2.0.5",
        "mocha": "^5.2.0",
        "requirejs": "^2.3.5",
        "rimraf": "^2.6.2",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3"
    },
    "build": {
        "asar": false,
        "appId": "chord.music",
        "files": ["./out/**/*", "!**/*.ts", "!**/*.tsx"]
    }
}
