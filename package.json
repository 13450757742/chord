{
    "name": "chord",
    "version": "0.0.1",
    "description": "Chord - A Modern Music Player",
    "homepage": "https://github.com/PeterDing/chord",
    "main": "./out/main.js",
    "author": "Peter Ding <dfhayst@gmail.com>",
    "license": "MIT",
    "scripts": {
        "compile": "gulp compile",
        "test": "./node_modules/mocha/bin/mocha --delay",
        "start": "ELECTRON_DEV=true electron ./out/main.js",
        "dist": "electron-builder --win --mac --linux deb",
        "dist:mac": "electron-builder --mac",
        "dist:win": "electron-builder --win",
        "dist:linux": "electron-builder --linux deb",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "productName": "chord",
        "asar": false,
        "appId": "chord.music",
        "compression": "maximum",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "./out/**/*",
            "!**/*.ts",
            "!**/*.tsx"
        ]
    },
    "dependencies": {
        "better-sqlite3": "^4.1.4",
        "big-integer": "^1.6.36",
        "cheerio": "^1.0.0-rc.2",
        "howler": "^2.0.15",
        "react": "^16.5.0",
        "react-dom": "^16.5.0",
        "react-redux": "^5.0.7",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.2"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^3.1.3",
        "@types/cheerio": "^0.22.9",
        "@types/howler": "^2.0.5",
        "@types/mocha": "^5.2.5",
        "@types/react": "^16.4.14",
        "@types/react-dom": "^16.0.7",
        "@types/react-redux": "^6.0.8",
        "@types/request": "^2.47.1",
        "@types/request-promise": "^4.1.42",
        "@types/tough-cookie": "^2.3.3",
        "electron": "^2.0.9",
        "electron-builder": "^20.28.4",
        "gulp": "^4.0.0",
        "gulp-clean": "^0.4.0",
        "gulp-filter": "^5.1.0",
        "gulp-typescript": "^5.0.0-alpha.3",
        "mocha": "^5.2.0",
        "requirejs": "^2.3.6",
        "rimraf": "^2.6.2",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3"
    }
}
